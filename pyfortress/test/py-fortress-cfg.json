{
  "logger": {
    "level": "INFO",
    "file_name": "fortress",
    "console_out": true
  },

  "ldap": {
    "host": "localhost",
    "port": 32768,
    "timeout": 1,
    "pool_name": "fort-conns",
    "pool_size": 5,
    "pool_lifetime": 600,
    "pool_keepalive": 30,
    "debug": false,
    "use_ssl": false,
    "ldap3_log_level": "ERROR",
    "method": "simple",
    "dn": "cn=Manager,dc=example,dc=com",
    "password": "secret"
  },
  "file": {
      "user": "user.json",
      "perm": "perm.json",
      "role": "role.json"
  },
  "dit": {
    "suffix": "dc=example,dc=com",
    "users": "People",
    "roles": "Roles",
    "perms": "Perms"
  },
  "schema": {
    "raw_delimiter": "$"
  }
}
